 <!doctype html>

 <html lang="fr">

 <head>
 		<meta charset ="UTF-8">
 		<title> Demande EPI </title>


    <!--        Stylesheets       -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
    <script href="{{ asset('js/bootstrap.min.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('css/gestRes.css') }}" />
    <script href="{{ asset('js/jquery.min.js') }}"></script>
    <script href="{{ asset('js/bootstrap.js') }}"></script>
    <link src="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link src="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet"

 </head>
 <body>
   <div>
     <!-- navbar (Bootstrap classes) -->
     <nav id="nav" class="navbar navbar-expand-sm  ">
    <!-- Brand -->
    <a class="navbar-brand" href="{{ path('demande') }}">Demande EPI</a>

    <!-- Links -->

    <ul class="navbar-nav">

      {% if  (app.user.hasRole('ROLE_ADMIN') or app.user.hasRole('ROLE_VALIDEUR'))%}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('listeDemande') }}">Historique des demandes</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="{{ path('fos_user_registration_register') }}">Ajouter un utilisateur</a>
        </li>

        <li class="nav-item ">
          <a class="nav-link " href="{{ path('gestionRessources') }}"  >
            Gestion de ressources
          </a>
        </li>
        <li class="nav-item ">
          <a class="nav-link " href="{{ path('chart') }}" >
            Statistiques
          </a>
        </li>
        <li class="nav-item ">
          <a class="nav-link " href="https://drive.google.com/open?id=10OXhpcbkLzNPfxZP7VJc0byJDcnuWQJQKBYOjTTpYzo" >
            Guide d'utilisation
          </a>
        </li>

        {% endif %}
      </ul>
    </nav>
   </br>
 </div>

   <div id="gestionForm" class="col-md-6">

        {% for flashMessage in app.session.flashbag.get('notice') %}

          <div class="alert alert-success">
              {{ flashMessage }}
          </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('warning') %}

            <div class="alert alert-danger">
                {{ flashMessage }}
            </div>

        {% endfor %}


       {{ form_start(formTechAdd, {'attr': {'class': 'form-horizontal'}}) }}

       <h3  class ="myTitle">Ajouter un technicien</h3>
       <!-- Ajouter un technicien -->

       {{ form_row(formTechAdd.nom, { 'attr': { 'maxlength' : 30 }}) }}
       {{ form_row(formTechAdd.prenom, { 'attr': { 'maxlength' : 30 }}) }}
       {{ form_row(formTechAdd.BT,{ 'attr': {'maxlength' : 30 , 'type' : 'number'}}) }}
       {{ form_row(formTechAdd.ajouter_technicien) }}
       {{form_end(formTechAdd)}}

       {{ form_start(formTechDel, {'attr': {'class': 'form-horizontal'}}) }}
       <!-- Supprimer un technicien -->
       <h3  class ="myTitle">Supprimer un technicien</h3>


       {{ form_row(formTechDel.tech) }}
       {{ form_row(formTechDel.supprimer_technicien) }}
       {{form_end(formTechDel)}}


       <!-- Ajouter un EPI -->
       {{ form_start(formEpiAdd, {'attr': {'class': 'form-horizontal'}}) }}
       <h3  class ="myTitle">Ajouter un EPI</h3>
       {{ form_row(formEpiAdd.refMaximo, { 'attr': { 'maxlength' : 30 }}) }}
       {{ form_row(formEpiAdd.Description) }}
       {{ form_row(formEpiAdd.refLyreco, { 'attr': { 'maxlength' : 30 }}) }}
       {{ form_row(formEpiAdd.puht, { 'attr': { 'maxlength' : 30 }}) }}
       {{ form_row(formEpiAdd.ajouter_epi) }}
       {{form_end(formEpiAdd)}}


       <!-- Supprimer un EPI -->
       {{ form_start(formEpiDel, {'attr': {'class': 'form-horizontal'}}) }}
       <h3  class ="myTitle">Supprimer un EPI</h3>
       {{ form_row(formEpiDel.epi) }}
       {{ form_row(formEpiDel.supprimer_epi) }}
       {{form_end(formEpiDel)}}


       <!-- Désactiver un compte utilisateur -->
       {{ form_start(formUserDisable, {'attr': {'class': 'form-horizontal'}}) }}
       <h3  class ="myTitle">Désactiver un compte utilisateur</h3>
       {{ form_row(formUserDisable.usersDis) }}
       {{ form_row(formUserDisable.desactiver_utilisateur) }}
       {{form_end(formUserDisable)}}

       <!-- Réactiver un compte utilisateur -->
       {{ form_start(formUserEnable, {'attr': {'class': 'form-horizontal'}}) }}
       <h3  class ="myTitle">Réactiver un compte utilisateur</h3>
       {{ form_row(formUserEnable.usersEn) }}
       {{ form_row(formUserEnable.activer_utilisateur) }}
       {{form_end(formUserEnable)}}


   </div>
 </body>

 </html>
